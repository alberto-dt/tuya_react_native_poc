# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Fuentes de CocoaPods
source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/TuyaInc/TuyaPublicSpecs.git'
source 'https://github.com/tuya/tuya-pod-specs.git'

platform :ios, '13.4'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'SmartLifeApp' do
  config = use_native_modules!

  # Configuración para React Native 0.74 (SIN FLIPPER)
  use_react_native!(
    :path => config[:reactNativePath],
    # Hermes habilitado por defecto en RN 0.74
    :hermes_enabled => true,
    # Fabric deshabilitado para evitar problemas de compatibilidad
    :fabric_enabled => false,
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # Tuya Smart Home SDK - versión compatible
  pod 'ThingSmartHomeKit','~> 6.2.0'

  # ThingSmartCryption - solo si el directorio existe
  if File.directory?('./ios_core_sdk')
    pod 'ThingSmartCryption', :path => './ios_core_sdk'
  else
    puts "⚠️  ios_core_sdk directory not found, skipping ThingSmartCryption"
  end

  # SDK de extensión de negocio (opcional)
  # pod 'ThingSmartBusinessExtensionKit'

  target 'SmartLifeAppTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # React Native post install para 0.74
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Configuración para todos los targets
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # Deployment target compatible con React Native 0.74
        config.build_settings["IPHONEOS_DEPLOYMENT_TARGET"] = "13.4"

        # Configuraciones para resolver problemas de compilación
        config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
        config.build_settings['CLANG_ALLOW_NON_MODULAR_INCLUDES_IN_FRAMEWORK_MODULES'] = 'YES'

        # Solo para simulador si hay problemas de arquitectura
        # config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"

        # Reemplaza con tu Apple Developer Team ID si es necesario
        # config.build_settings["DEVELOPMENT_TEAM"] = "YOUR_TEAM_ID"
      end
    end

    # Configuración adicional para proyectos generados
    installer.generated_projects.each do |project|
      project.targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.4'
        end
      end
    end
  end
end
