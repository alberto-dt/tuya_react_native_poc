# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# ✅ FUENTES OFICIALES DE TUYA
source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/TuyaInc/TuyaPublicSpecs.git'
source 'https://github.com/tuya/tuya-pod-specs.git'

# ✅ iOS 15.1+ REQUERIDO POR REACT NATIVE 0.77
platform :ios, '15.1'
prepare_react_native_project!

# ✅ CONFIGURACIÓN DE FLAGS PARA RN 0.77
hermes_enabled = true
fabric_enabled = false

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'SmartLifeAppPOC' do
  config = use_native_modules!

  # ✅ CONFIGURACIÓN PARA REACT NATIVE 0.77
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => hermes_enabled,
    :fabric_enabled => fabric_enabled,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  # ✅ TUYA SDK CON VERSIONES CORRECTAS
  pod 'ThingSmartHomeKit', '~> 6.2.0'
  pod 'ThingSmartCryption', :path => './ios_core_sdk'

  # ✅ USAR VERSIÓN COMPATIBLE (no especificar 6.2.0)
  pod 'ThingSmartActivatorKit'

  post_install do |installer|
    # ✅ POST INSTALL PARA REACT NATIVE 0.77
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )

    # ✅ CONFIGURACIONES PARA TODOS LOS TARGETS
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        # ✅ DEPLOYMENT TARGET PARA RN 0.77
        config.build_settings["IPHONEOS_DEPLOYMENT_TARGET"] = "15.1"

        # Configuraciones para simulador
        config.build_settings["EXCLUDED_ARCHS[sdk=iphonesimulator*]"] = "arm64"

        # ⚠️ REEMPLAZAR CON TU TEAM ID
        config.build_settings["DEVELOPMENT_TEAM"] = "YOUR_TEAM_ID"

        # Configuraciones adicionales para RN 0.77
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
        config.build_settings['ENABLE_BITCODE'] = 'NO'
      end
    end

    # ✅ FIX PARA DEPLOYMENT TARGET CONSISTENTE
    installer.aggregate_targets.each do |aggregate_target|
      aggregate_target.user_project.native_targets.each do |target|
        target.build_configurations.each do |config|
          config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
        end
      end
      aggregate_target.user_project.save
    end
  end
end
